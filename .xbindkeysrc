############################################################
# Volume
############################################################
# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +10%"
   XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -10%"
   XF86AudioLowerVolume

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute


############################################################
# Screen
############################################################
# Backlights
"xbacklight -inc 10"
   XF86MonBrightnessUp

"xbacklight -dec 10"
   XF86MonBrightnessDown


############################################################
# Player
############################################################
"playerctl play-pause"
    XF86AudioPlay
"playerctl stop"
    XF86AudioStop
"playerctl next"
    XF86AudioNext
"playerctl previous"
    XF86AudioPrev


# Mute microphone
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
   XF86AudioMicMute
